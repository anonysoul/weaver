{
  "name": "weaver",
  "version": "0.0.0",
  "scripts": {
    "openapi-generate": "wireit",
    "start": "wireit",
    "build": "wireit",
    "watch": "wireit",
    "test": "wireit",
    "format": "prettier --write \"src/**/*.{ts,html,less,css,md}\""
  },
  "wireit": {
    "openapi-generate": {
      "command": "openapi-generator-cli generate -i ../backend/src/main/resources/openapi/openapi.yaml -g typescript-angular -o src/app/core/openapi --additional-properties stringEnums=true,fileNaming=kebab-case,enumPropertyNaming=UPPERCASE,withInterfaces=true,supportsES6=true,configurationPrefix=OpenApi,ngVersion=21.0.0,providedInRoot=true"
    },
    "start": {
      "command": "ng serve --host 0.0.0.0 --port 8765",
      "dependencies": [
        "openapi-generate"
      ]
    },
    "build": {
      "command": "ng build",
      "dependencies": [
        "openapi-generate"
      ]
    },
    "watch": {
      "command": "ng build --watch --configuration development",
      "dependencies": [
        "openapi-generate"
      ]
    },
    "test": {
      "command": "ng test",
      "dependencies": [
        "openapi-generate"
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.4",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/animations": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@primeng/themes": "^21.0.0",
    "primeicons": "^7.0.0",
    "primeng": "^21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.5",
    "@angular/cli": "^21.0.5",
    "@angular/compiler-cli": "^21.0.0",
    "@openapitools/openapi-generator-cli": "^2.18.4",
    "jsdom": "^27.1.0",
    "less": "^4.2.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8",
    "wireit": "^0.9.5"
  }
}
